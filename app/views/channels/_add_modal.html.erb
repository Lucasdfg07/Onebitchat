<div id="add_channel_modal" class="modal">
  <div class="modal-content">
    <div class="row">
      <%= form_tag("channels", :method => :post, class: "col s12 add_channel_form") do %>
        <div class="row">
          <div class="col s12">
            <h4>Add a Channel</h4>
          </div>
          <div class="input-field col s12">
            <%= hidden_field(:channel, :team_id, value: @team.id ) %>
            <%= text_field(:channel, :slug) %>
            <%= label_tag(:email, "Channel Name") %>
            <%= submit_tag("Add Channel", class: "btn right") %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>